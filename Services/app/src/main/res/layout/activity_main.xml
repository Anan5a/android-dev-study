<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonStartClassicService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start classic service"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartJobService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonStartJobService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start JOB Intent Service"
        app:layout_constraintBottom_toTopOf="@+id/buttonStopClassicService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartClassicService"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonStopClassicService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Classic Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartJobService"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>